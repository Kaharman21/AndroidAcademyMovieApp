<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/view_holder_actor_photo_size"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/activity_movie_details_background"
    android:orientation="vertical"
    android:layout_marginHorizontal="@dimen/view_holder_actor_layout_horizontal_margin"
    >

    <ImageView
        android:id="@+id/view_holder_actor_photo"
        android:layout_width="@dimen/view_holder_actor_photo_size"
        android:layout_height="@dimen/view_holder_actor_photo_size"
        android:layout_marginTop="@dimen/view_holder_actor_photo_top_margin"
        android:scaleType="centerCrop"
        android:src="@drawable/chris_hemsworth"
        />

    <TextView
        android:id="@+id/view_holder_actor_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="@string/view_holder_actor_name"
        android:textColor="@color/white"
        android:textSize="@dimen/activity_movie_details_actor_name_text_size"
        android:textStyle="bold"
        />

</LinearLayout>